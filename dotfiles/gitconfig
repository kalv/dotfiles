[user]
	name = Kalvir Sandhu
  email = kalv@kalv.co.uk
[core]
	excludesfile = ~/.gitignore
	quotepath = false
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	amend = commit --amend
  squash = rebase --interactive
  unadd = reset HEAD
  co = checkout
  aa = add -A
  st = status
  ps = push
  pl = pull
  waa = "!sh -c 'git diff -- \"$@\" | git apply --cached --whitespace=fix; git checkout -- ${1-.} \"$@\"' -"
[push]
	default = current
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
