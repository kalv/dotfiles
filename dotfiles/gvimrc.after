set guifont=Meslo:h14
" set up the colors
set background=dark
colorscheme solarized

set guioptions-=T
set fuoptions=maxhorz,maxvert
set nonumber

let g:buffergator_viewport_split_policy = "T"

" Easily split off a new vertical split window
nmap <leader>v :vsplit<cr>

" Quickly navigate around windows using Command and arrows
nmap <D-A-Up> <C-W>k
nmap <D-A-Down> <C-W>j
nmap <D-A-Left> <C-W>h
nmap <D-A-Right> <C-W>l
