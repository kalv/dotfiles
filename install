#!/usr/bin/env zsh

for found in ~/.dotfiles/dotfiles/*; do
  ln -fs $found ~/.$(basename $found)
done

chsh -s /bin/zsh

# set up powerlevel10k for faster zsh prompt
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ~/.powerlevel10k

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
      https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

brew install zsh-history-substring-search
brew install zsh-syntax-highlighting
brew install reattach-to-user-namespace
brew install the_silver_searcher tmux fzf

git clone git://github.com/zsh-users/zsh-autosuggestions ~/.zsh/zsh-autosuggestions

# setup tmuxinator
mkdir ~/.tmuxinator
ln -fs ~/.dotfiles/resources/tmuxinator/app.yml ~/.tmuxinator/app.yml
